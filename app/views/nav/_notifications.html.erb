<div
  id="notifications-container"
  data-controller="dropdown"
  data-action="click@window->dropdown#hide"
  class="relative"
>
  <button
    id="notifications-menu"
    data-action="click->dropdown#toggle"
    aria-expanded="false"
    class="relative px-1 py-4 text-gray-800 border-2 border-transparent rounded-full"
  >
    <span class="sr-only">Notifications</span>
    <%= inline_svg_tag('bell', class: "h-6 w-6") %>
    <% if current_user.notifications.unread.exists? %>
      <div class="absolute inset-0 object-right-top -mr-6">
        <div class="inline-flex items-center px-1.5 py-0.5 border-2 border-white rounded-full text-xs font-semibold leading-4 bg-red-500 text-white">
          <%= current_user.notifications.unread.count %>
        </div>
      </div>
    <% end %>
  </button>
  <div data-dropdown-target="content" class="absolute overflow-y-scroll bg-gray-100 rounded-md shadow-lg dropdown-content w-96 h-96 ring-1 ring-black ring-opacity-5">
    <%= turbo_frame_tag "notifications", src: notifications_path %>
  </div>
</div>